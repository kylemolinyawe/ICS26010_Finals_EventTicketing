<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">
<!--navbar-->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="fill_parent"
        android:layout_height="62.66dp"
        android:background="@color/background"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage"
        android:paddingHorizontal="16.6667dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Musika!"
            android:textSize="32dp"
            android:fontFamily="@font/migoes"
            android:textColor="@color/primary"/>
        <ImageView
            android:layout_width="31.3333dp"
            android:layout_height="31.3333dp"
            android:src="@drawable/hamburger" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary"
        app:layout_constraintTop_toBottomOf="@id/navbar"/>
<!--body-->
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">
<!--event group-->
        <LinearLayout
            android:id="@+id/eventCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventImage1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:background="@color/primary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="16.6667dp"
                android:paddingRight="16.6667dp"
                android:background="@color/background">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/eventTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLOOM MUSIC FESTIVAL"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:fontFamily="@font/header"
                        android:gravity="center"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:id="@+id/eventYear1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/header"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:letterSpacing="0.1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="23.3333dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/eventDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue 3/5"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/header"
                        android:textColor="@color/primary"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/eventLocation1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SM Seaside, Cebu"
                            android:textColor="@color/black"
                            android:fontFamily="@font/body"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="2.3333dp"
                            android:layout_height="13.3333dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/primary"/>
                        <TextView
                            android:id="@+id/eventVenue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sky Hall"
                            android:textColor="@color/black"
                            android:fontFamily="@font/body"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTickets1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tickets"
                    android:fontFamily="@font/header"
                    android:textSize="16sp"
                    android:paddingVertical="13.3333dp"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="13.3333dp"
                    />
                <View
                    android:layout_marginTop="23.3333dp"
                    android:background="@color/secondary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>