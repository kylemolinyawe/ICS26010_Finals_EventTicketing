<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!--navbar-->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="fill_parent"
        android:layout_height="62.66dp"
        android:background="@drawable/layout_border_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16.6667dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="16.6667dp"
            android:layout_height="27.08333dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="16.6667dp"
            android:layout_marginRight="16.6667dp"
            android:layout_weight="1"
            android:fontFamily="@font/header"
            android:gravity="center_vertical"
            android:text="Payment Methods"
            android:textColor="@color/primary"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="31.3333dp"
            android:layout_height="31.3333dp"
            android:src="@drawable/hamburger" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="23.3333dp"
            android:paddingHorizontal="16.6667dp"
            android:background="@drawable/layout_border_bottom">
            <ImageView
                android:layout_width="168.93dp"
                android:layout_height="40dp"
                android:src="@mipmap/logogcash" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/radioGCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="23.3333dp"
            android:paddingHorizontal="16.6667dp"
            android:background="@drawable/layout_border_bottom">
            <ImageView
                android:layout_width="137.43dp"
                android:layout_height="40dp"
                android:src="@mipmap/logomaya" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/radioMaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="23.3333dp"
            android:paddingHorizontal="16.6667dp"
            android:background="@drawable/layout_border_bottom">
            <ImageView
                android:layout_width="64.16dp"
                android:layout_height="40dp"
                android:src="@mipmap/logomastercard" />
            <ImageView
                android:layout_width="125.2933dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/logovisa" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/radioMastercard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="23.3333dp"
            android:paddingHorizontal="16.6667dp"
            android:background="@drawable/layout_border_bottom">
            <ImageView
                android:layout_width="151.6233dp"
                android:layout_height="40dp"
                android:src="@mipmap/logograbpay" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/radioGrabPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary"
        app:layout_constraintBottom_toTopOf="@id/ticketPriceTab"/>
    <LinearLayout
        android:id="@+id/ticketPriceTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingVertical="13.3333dp"
        android:paddingHorizontal="16.6667dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:fontFamily="@font/header"
            android:textSize="16sp"
            android:paddingVertical="13.3333dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="13.3333dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>