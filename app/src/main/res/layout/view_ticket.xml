<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <!--navbar-->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="fill_parent"
        android:layout_height="62.66dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16.6667dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="16.6667dp"
            android:layout_height="27.08333dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="16.6667dp"
            android:layout_marginRight="16.6667dp"
            android:layout_weight="1"
            android:fontFamily="@font/header"
            android:gravity="center_vertical"
            android:text="View Tickets"
            android:textColor="@color/primary"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="31.3333dp"
            android:layout_height="31.3333dp"
            android:src="@drawable/hamburger" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/eventInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary" />
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="96.6667dp"
            android:src="@mipmap/eventimage1"
            android:background="@color/primary"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary"
            app:layout_constraintTop_toBottomOf="@id/eventImage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16.6667dp"
            android:paddingVertical="20dp"
            android:orientation="vertical"
            android:background="@drawable/layout_border_bottom">
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLOOM MUSIC FESTIVAL"
                android:textColor="@color/black"
                android:fontFamily="@font/headerblack"
                android:textSize="21.3333dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:fontFamily="@font/header"
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/eventDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:text="March 5"
                            android:textColor="@color/black"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Location"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/header"/>
                        <TextView
                            android:id="@+id/eventLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:text="Cebu, SM Seaside"
                            android:textColor="@color/black"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Type"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/header"/>
                        <TextView
                            android:id="@+id/ticketType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Standard"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Time"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/header"/>
                        <TextView
                            android:id="@+id/eventTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="04:00 PM"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Venue"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/header"/>
                        <TextView
                            android:id="@+id/eventVenue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sky Hall"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Zone"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/header"/>
                        <TextView
                            android:id="@+id/ticketZone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="A1"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:fontFamily="@font/body"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eventInformation"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ticketQRCodeImage"
            android:layout_width="216.6667dp"
            android:layout_height="216.6667dp"
            android:background="@color/primary"/>
        <TextView
            android:id="@+id/ticketRefNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="#12-392A1F"
            android:fontFamily="@font/header"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary"
        app:layout_constraintBottom_toTopOf="@id/ticketPriceTab"/>
    <LinearLayout
        android:id="@+id/ticketPriceTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/background"
        android:orientation="horizontal"
        android:paddingVertical="13.3333dp"
        android:paddingHorizontal="16.6667dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/buttonShare"
            android:layout_width="24.067dp"
            android:layout_height="26.6667dp"
            android:src="@drawable/iconshare"/>
        <ImageView
            android:id="@+id/buttonDownload"
            android:layout_width="24.067dp"
            android:layout_height="26.6667dp"
            android:src="@drawable/icondownload"
            android:layout_marginLeft="66.6667dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>